<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/ui_blue"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/btn_menu_unlock"
                    style="@style/button_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="Unlock" />

                <ImageButton
                    android:id="@+id/btn_menu_unlock_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.3"
                    android:background="@color/ui_light_blue"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/ic_zoom_in_white_24dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/btn_menu_edit"
                    style="@style/button_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/edit" />

                <ImageButton
                    android:id="@+id/btn_menu_icon_edit"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.3"
                    android:background="@color/ui_light_blue"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/ic_edit_white_24dp" />

            </TableRow>

            <TableRow
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/btn_menu_add_image"
                    style="@style/button_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/add_image" />

                <ImageButton
                    android:id="@+id/btn_menu_icon_add_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.3"
                    android:background="@color/ui_light_blue"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/ic_photo_camera_white_24dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/btn_menu_duplicate"
                    style="@style/button_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/duplicate" />

                <ImageButton
                    android:id="@+id/btn_menu_icon_duplicate"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.3"
                    android:background="@color/ui_light_blue"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/ic_content_copy_white_24dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp">

                <Button
                    android:id="@+id/btn_menu_sync"
                    style="@style/button_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/syncronisation" />

                <ImageButton
                    android:id="@+id/btn_menu_icon_sync"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.3"
                    android:background="@color/ui_light_blue"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/ic_sync_white_24dp" />

            </TableRow>

            <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

                <Button
                    android:id="@+id/btn_menu_delete"
                    style="@style/button_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/delete" />

                <ImageButton
                    android:id="@+id/btn_menu_icon_delete"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.3"
                    android:background="@color/ui_light_blue"
                    android:textAlignment="center"
                    app:srcCompat="@drawable/ic_delete_forever_white_24dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="0dp">

                <Button
                    android:id="@+id/btn_menu_close"
                    style="@style/button_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="@string/close" />

            </TableRow>
        </TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>