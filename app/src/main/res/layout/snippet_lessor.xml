<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_blue">

    <LinearLayout
        style="@style/row_nobg"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            style="@style/headline"
            android:layout_width="match_parent"
            android:background="@color/ui_dark_blue"
            android:text="@string/lessor_information"
            android:textColor="@color/ui_white" />

        <TableLayout
            style="@style/table"
            android:padding="0dp"
            android:stretchColumns="*">

            <TableRow
                style="@style/table_row"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <TextView
                    android:layout_width="69dp"
                    android:paddingLeft="10dp"
                    android:text="@string/salutation"
                    android:textColor="@color/ui_white"
                    android:textSize="@dimen/default_text_size" />

                <Spinner
                    android:id="@+id/vermieter_anrede"
                    style="@style/spinner"
                    android:layout_height="wrap_content"
                    android:background="@color/ui_white"
                    android:padding="8dp" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:paddingTop="10dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView15"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lastname" />

                <TextView
                    android:id="@+id/textView16"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/firstname" />
            </TableRow>



            <TableRow
                style="@style/table_row"
                android:paddingTop="0dp"
                android:paddingBottom="2dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    android:layout_marginRight="2dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vermieter_nachname"
                        style="@style/input"
                        android:hint="@string/lastname" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vermieter_vorname"
                        style="@style/input"
                        android:hint="@string/firstname" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>


            <TableRow
                style="@style/table_row"
                android:paddingTop="10dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView17"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/street" />

                <TextView
                    android:id="@+id/textView18"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/housenumber" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:paddingTop="0dp"
                android:paddingBottom="2dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    android:layout_marginRight="2dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vermieter_strasse"
                        style="@style/input"
                        android:layout_marginRight="2dp"
                        android:hint="@string/street" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vermieter_hnr"
                        style="@style/input"
                        android:hint="@string/housenumber" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>


            <TableRow
                style="@style/table_row"
                android:paddingTop="10dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView19"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zip" />

                <TextView
                    android:id="@+id/textView20"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/city" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:paddingTop="0dp"
                android:paddingBottom="2dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    android:layout_marginRight="2dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vermieter_plz"
                        style="@style/input"
                        android:hint="@string/zip" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/vermiter_ort"
                        style="@style/input"
                        android:hint="@string/city" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>