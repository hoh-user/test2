<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_blue">

    <LinearLayout
        style="@style/row_nobg"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView33"
            style="@style/headline"
            android:layout_width="match_parent"
            android:background="@color/ui_dark_blue"
            android:textColor="@color/ui_white"
            android:text="@string/kaution_information_description" />

        <TableLayout
            style="@style/table"
            android:padding="0dp"
            android:stretchColumns="*">

            <TableRow
                style="@style/table_row"
                android:paddingTop="0dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView15"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/street" />

                <TextView
                    android:id="@+id/textView16"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/housenumber" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:paddingTop="0dp"
                android:paddingBottom="2dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    android:layout_marginRight="2dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/stromlieferung_strasse"
                        style="@style/input"
                        android:layout_marginRight="2dp"
                        android:hint="@string/street" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/stromlieferung_hausnummer"
                        style="@style/input"
                        android:hint="@string/housenumber" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:paddingTop="10dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView17"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zip" />

                <TextView
                    android:id="@+id/textView18"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/city" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:paddingTop="0dp"
                android:paddingBottom="2dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    android:layout_marginRight="2dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/stromlieferung_plz"
                        style="@style/input"
                        android:hint="@string/zip" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/stromlieferung_ort"
                        style="@style/input"
                        android:hint="@string/city" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>


            <TableRow
                style="@style/table_row"
                android:paddingTop="10dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView19"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/whg_miete" />

                <TextView
                    android:id="@+id/textView20"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/whg_kaution" />
            </TableRow>


            <TableRow
                style="@style/table_row"
                android:paddingTop="0dp"
                android:paddingBottom="2dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    android:layout_marginRight="2dp"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/whg_miete"
                        style="@style/input"
                        android:hint="@string/whg_miete" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/whg_kaution"
                        style="@style/input"
                        android:hint="@string/whg_kaution" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
        </TableLayout>


        <TextView
            android:id="@+id/textView3"
            style="@style/headline"
            android:layout_width="match_parent"
            android:background="@color/ui_dark_blue"
            android:text="@string/kaution_information"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:textColor="@color/ui_white" />

        <TableLayout
            style="@style/table"
            android:padding="0dp"
            android:stretchColumns="*">

            <TableRow
                style="@style/table_row"
                android:paddingTop="10dp"
                android:layout_span="2"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView21"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kaution_mietvertrag" />

            </TableRow>

            <TableRow
                android:id="@+id/kaution_distributor_change_date_container"
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    android:layout_span="2"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/kaution_distributor_change_date"
                        style="@style/input"
                        android:focusableInTouchMode="false"
                        android:hint="@string/kaution_mietvertrag"
                        android:onClick="showDatePickerDialog" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:paddingTop="10dp"
                android:layout_span="2"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView22"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kaution_mietbegin" />
            </TableRow>

            <TableRow
                android:id="@+id/kaution_moving_in_date_container"
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <android.support.design.widget.TextInputLayout
                    style="@style/input_layout"
                    android:layout_span="2"
                    app:hintEnabled="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/kaution_moving_in_date"
                        style="@style/input"
                        android:focusableInTouchMode="false"
                        android:hint="@string/kaution_mietbegin"
                        android:onClick="showDatePickerDialog" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
        </TableLayout>

        <TableLayout
            style="@style/table"
            android:padding="0dp"
            android:stretchColumns="*">


            <TableRow
                style="@style/table_row"
                android:paddingTop="10dp"
                android:layout_span="2"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/textView23"
                    style="@style/text"
                    android:paddingLeft="10dp"
                    android:textColor="@color/ui_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kaution_optionen" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <CheckBox
                    android:id="@+id/kaution_moving_in"
                    style="@style/checkbox"
                    android:background="@color/ui_white"
                    android:gravity="center_vertical"
                    android:text="@string/kaution_neu"
                    android:textColor="@color/ui_grey" />

            </TableRow>

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <CheckBox
                    android:id="@+id/kaution_distributor_change"
                    style="@style/checkbox"
                    android:background="@color/ui_white"
                    android:gravity="center_vertical"
                    android:text="@string/kaution_umwandeln"
                    android:textColor="@color/ui_grey" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">
                <CheckBox
                    android:id="@+id/whg_temp"
                    style="@style/checkbox"
                    android:background="@color/ui_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/whg_temp" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <CheckBox
                    android:id="@+id/whg_kuendigung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/ui_white"
                    style="@style/checkbox"
                    android:text="@string/whg_kuendigung" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <CheckBox
                    android:id="@+id/whg_mietverzug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/ui_white"
                    style="@style/checkbox"
                    android:text="@string/whg_mietverzug" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <CheckBox
                    android:id="@+id/whg_schaeden"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/ui_white"
                    style="@style/checkbox"
                    android:text="@string/whg_schaeden" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <CheckBox
                    android:id="@+id/whg_kaution_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/ui_white"
                    style="@style/checkbox"
                    android:text="@string/whg_kaution_no" />
            </TableRow>

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:padding="0dp">

                <CheckBox
                    android:id="@+id/whg_kaution_bes_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@color/ui_white"
                    style="@style/checkbox"
                    android:text="@string/whg_kaution_bes_no" />
            </TableRow>

        </TableLayout>

        <TableLayout
            style="@style/table"
            android:padding="0dp"
            android:stretchColumns="*">

            <TableRow
                style="@style/table_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <TextView
                    android:layout_width="69dp"
                    android:padding="3dip"
                    android:text="@string/whg_versand"
                    android:textColor="@color/ui_white"
                    android:textSize="@dimen/default_text_size" />

                <Spinner
                    android:id="@+id/whg_versand"
                    style="@style/spinner"
                    android:layout_height="wrap_content"
                    android:background="@color/ui_white"
                    android:padding="8dp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>